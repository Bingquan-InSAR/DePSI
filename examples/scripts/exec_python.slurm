source ~/.bashrc

# CHANGE THIS TO THE ABSOLUTE PATH TO THE CONTAINER BIN
export PATH="<PATH/TO/YOUR/CONTAINER/BIN>:$PATH"

# OR IF YOUR SLURM SYSTEM ALLOWS CONDA, ACTIVATE CONDA DIRECTLY
# conda activate <CONDA_ENV>

python <YOUR_PYTHON_SCRIPY.py>